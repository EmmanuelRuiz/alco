{% extends 'layouts/master-admin.html.twig' %}
{% block title %} {% endblock %}
{% block metatags %} {% endblock %}
{% block body %}
	<br>
	<br>
	<br>
	<h4><a href="{{ path('category_creation') }}">Nueva Categoría</a></h4>
	{% if service_categories|length >= 1 %}
		<table>
			<tr>
				<th>Nombre</th>
				<th>Acciones</th>
			</tr>
			{% for category in service_categories %}
				<tr>
					<td>{{ category.ServiceCategoryName }}</td>
					<td>
						<a href="{{ path('category_detail', {'id':category.id}) }}">Ver</a>
						{% if category.user.id == app.user.id %}
							<a href="{{ path('category_edit', {'id':category.id}) }}">Editar</a>
							<a href="{{ path('category_delete', {'id':category.id}) }}">Eliminar</a>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</table>
	{% else %}
		<strong>No hay categorías disponibles</strong>
	{% endif %}
{% endblock %}